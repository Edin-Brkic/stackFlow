{
  "extends": [
    "next",
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["./app/api/webhook/route.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["./app/layout.tsx"],
      "rules": {
        "no-unused-vars": "off",
        "camelcase": "off"
      }
    },
    {
      "files": ["./app/(root)/layout.tsx"],
      "rules": {
        "tailwindcss/no-custom-classname": "off"
      }
    }
  ]
}
